using System;
using System.Collections.Generic;
using System.Threading.Tasks;
using EmbeddingShift.Abstractions.Shifts;
using EmbeddingShift.Core.Workflows;
using EmbeddingShift.Workflows;
using Xunit;

namespace EmbeddingShift.Tests
{
    /// <summary>
    /// Verifies that FileBasedInsuranceMiniWorkflow actually invokes
    /// the embedding shift pipeline for documents and queries.
    /// </summary>
    public class FileBasedInsuranceMiniWorkflowShiftHookTests
    {
        private sealed class LoggingShiftPipeline : IEmbeddingShiftPipeline
        {
            private readonly List<int> _calls = new();

            public int CallCount => _calls.Count;

            public IReadOnlyList<IEmbeddingShift> Shifts { get; }
                = Array.Empty<IEmbeddingShift>();

            public void ApplyInPlace(float[] embedding)
            {
                // We do not modify the embedding to keep behavior identical.
                _calls.Add(1);
            }
        }

        [Fact]
        public async Task File_based_insurance_workflow_invokes_shift_pipeline_for_docs_and_queries()
        {
            var pipeline = new LoggingShiftPipeline();
            var workflow = new FileBasedInsuranceMiniWorkflow(pipeline);

            var artifacts = await WorkflowRunner.RunAsync(workflow);

            Assert.True(artifacts.Success);
            // 3 docs + 3 queries = at least 6 calls.
            Assert.True(pipeline.CallCount >= 6);
        }
    }
}
